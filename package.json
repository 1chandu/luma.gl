{
  "name": "lumagl",
  "version": "0.0.0",
  "description": "A WebGL JavaScript visualization library.",
  "license": "MIT",
  "author": "Ib Green <ib@uber.com>",
  "contributors": [
    "Nicolas Belomonte <nico@uber.com>",
    "Rye Terrell <ryeterrell@ryeterrell.net"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/uber-common/luma.gl"
  },
  "keywords": [
    "webgl",
    "w3c",
    "visualization",
    "canvas",
    "animation",
    "3d"
  ],
  "main": "src/index.js",
  "browserify": {
    "transform": [
      "babelify",
      "glslify"
    ]
  },
  "dependencies": {
    "babel-polyfill": "^6.2.0",
    "global": "^4.3.0"
  },
  "devDependencies": {
    "babel": "^5.8.34",
    "babel-cli": "^6.2.0",
    "babel-eslint": "^4.1.5",
    "babelify": "^6.4.0",
    "browserify": "^12.0.1",
    "budo": "^8.0.3",
    "eslint": "^1.9.0",
    "faucet": "0.0.1",
    "glslify": "^2.2.1",
    "husky": "^0.9.2",
    "tape": "^4.0.0",
    "uber-standard": "^5.1.0",
    "uglify-js": "^2.6.1"
  },
  "scripts": {
    "build": "npm run build-dev && npm run build-min",
    "build-min": "browserify src/bundle.js | uglifyjs > dist/LumaGL.min.js",
    "build-dev": "browserify src/bundle.js -o dist/LumaGL.js",
    "start": "budo src/bundle.js:dist/LumaGL.js --live --open --port 3000",
    "test": "babel-node --ignore='' test/index.js"
  }
}
